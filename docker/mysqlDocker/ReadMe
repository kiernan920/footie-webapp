
#Build
docker build --tag=mysql .

#Run
docker run -it -p 3306:3306 --net=host -e MYSQL_ROOT_PASSWORD=root -e MYSQL_DATABASE=footiedb mysql

#Connect through docker client
docker exec -it mysql bash

#Trial and Error
docker run --name mysqldb -it -p 3306:3306 --net=host -e MYSQL_ROOT_PASSWORD=root -e MYSQL_DATABASE=footiedb mysql

$ docker run --name some-mysql -e MYSQL_ROOT_PASSWORD=my-secret-pw -d mysql:tag
